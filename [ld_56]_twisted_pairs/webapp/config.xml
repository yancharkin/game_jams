<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yancharkin.twistedPairs" version="0.9.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Twisted Pairs</name>
    <description>
        Match Pairs game but with a twist!
    </description>
    <author email="yancharkin@gmail.com" href="https://github.com/yancharkin">
        Ivan Yancharkin
    </author>
    <content src="index.html" />
    <icon src="res/icon/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/android/icon.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#1e3a29" />
        <preference name="Orientation" value="landscape" />
        <preference name="FullScreen" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
